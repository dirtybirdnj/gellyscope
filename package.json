{
  "name": "gellyscope",
  "version": "1.0.0",
  "description": "Cross-platform SVG structure explorer and plotter controller - Gellyscope",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "svg",
    "explorer",
    "structure"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "xml2js": "^0.6.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.yourcompany.gellyscope",
    "productName": "Gellyscope",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Graphics"
    }
  }
}
